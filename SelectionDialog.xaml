<Window x:Class="LocalLibrary.SelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="400" Width="400" Title="Select Match">

    <Grid Background="{DynamicResource ControlBackgroundBrush}">
        <StackPanel Background="{DynamicResource ControlBackgroundBrush}">
            <TextBlock x:Name="SelectText" Margin="10"/>
            <ListBox x:Name="OptionsListBox" Margin="10" Height="200" Background="{DynamicResource ControlBackgroundBrush}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Background="{DynamicResource ControlBackgroundBrush}">
                <Button Content="Select" Width="100" Margin="5" Click="SelectButton_Click"/>
                <Button Content="None are correct" Width="200" Margin="5" Click="NoneButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>