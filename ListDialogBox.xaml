<Window x:Class="LocalLibrary.ListDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a Match" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Select a match from the list or choose 'None of the matches are correct'." Margin="10"/>
            <ListBox x:Name="OptionsListBox" Margin="10" Height="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Select" Width="100" Margin="5" Click="SelectButton_Click"/>
                <Button Content="None are correct" Width="200" Margin="5" Click="NoneButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>